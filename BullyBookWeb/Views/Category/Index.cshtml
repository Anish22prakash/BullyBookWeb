@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Category Index Page</h1>

<div class="container p-3">
    <div class="row p-5">
        <div class="col-6">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>



<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th class="text-center">
                Category Name
            </th>
                <th class="text-center">
                Display order
            </th>
                <th class="text-center">
                Order Date Time
            </th>
            <th></th>
        </tr>
    </thead>

  <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                    <td width="10%" class="text-center">
                    @obj.Name
                </td>
                    <td width="10%" class="text-center">
                    @obj.DisplayOrder
                </td>
                    <td width="20%" class="text-center">
                    @obj.CreatedDate
                </td>
                    <td width="20%" class="text-center">
                    <div class="w-75 btn-group justify-content-evenly" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil"></i> &nbsp Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger ms-2"><i class="bi bi-trash3"></i> &nbsp Delete </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

